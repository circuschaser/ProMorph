<% provide(:title, "My Music") %>
<div id="content_main">
	<div class="paper_wrap">
		<div class="paper">


			<h3>My Songs
				<span>
			  		<%= link_to "USELESS BUTTON", "#", :class => 'btn' %><br/>
				</span>
			</h3>

			<%= will_paginate @pieces, inner_window: 2 %>


      <% if @pieces.size == 0 -%>
      <p class="alert">You haven't added any music yet. <%= link_to "Add a new song or piece", "#", :id => 'new_button' %> to get started!</p>
      <% else -%>
      <div>

      	<table class="piece">

        	<% @pieces.each do |piece| %>
      		<tr>
      			<td class="content_left">
      				<%= piece[:title] %>
      				<p class="meta"><%= piece[:composer] %>
      				&ensp; &loz; &ensp; <%= piece[:album] %>
      				&ensp; &loz; &ensp; <%= piece[:genre] %></p>
      			</td>
      		</tr>
	        <% end %>
    	</table>
      </div>
      <% end -%>

		</div>
	</div>
</div>
